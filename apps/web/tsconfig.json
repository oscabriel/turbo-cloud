{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"types": ["vite/client"],
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"composite": true,
		"verbatimModuleSyntax": true
	},
	"include": ["src", "vite.config.ts", "../../apps/server/src/**/*"],
	"exclude": ["node_modules", "dist", ".turbo"]
}
